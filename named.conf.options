options {
    directory "/var/cache/bind";

    // Solo IPv4
    listen-on { any; };
    listen-on-v6 { none; };

    // Seguridad DNS
    dnssec-validation yes;

    // Control de acceso
    allow-recursion { localhost; 192.168.57.0/24; };
    allow-query { any; };
    allow-transfer { none; };

    // Reenv√≠o a OpenDNS
    forwarders {
        208.67.222.222;
    };
};

